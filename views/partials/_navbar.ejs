<style>
  #header {
    background-color: #212121;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
    position: sticky;
    top: 0;
    left: 0;
    z-index: 999;
    height: 60px;
  }

  .logo {
    padding: 1px 15px;
    height: 45px;
  }

  #navbar {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 60px;
  }

  #navbar li {
    width: 100px;
    list-style: none;
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    z-index: 1;
    transition: color 0.2s ease, transform 0.3s ease;
  }

  #navbar li:not(.no-hover)::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background-color: white;
    z-index: 0;
    transition: width 0.2s ease;
  }

  #navbar li:not(.no-hover):hover::before {
    width: 100%;
  }

  #navbar li:not(.no-hover):hover a {
    color: #1e1e1e;
  }

  #navbar li a {
    text-decoration: none;
    color: white;
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  #navbar li:last-child {
    margin-right: 15px;
  }

  #navbar li.no-hover button {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #navbar button {
    position: relative;
    background-color: transparent;
    color: white;
    font-size: 18px;
    border-radius: 5px;
    border: 2px solid white;
    padding: 8px 20px;
    cursor: pointer;
    overflow: hidden;
    z-index: 1;
    transition: color 0.2s ease, transform 0.3s ease;
    text-decoration: none;
  }

  #navbar button::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background-color: white;
    z-index: 0;
    transition: width 0.2s ease;
  }

  #navbar button:hover::before {
    width: 100%;
  }

  #navbar button:hover {
    color: #1e1e1e;
  }

  #navbar button span {
    position: relative;
    z-index: 2;
  }

  .user-avatar {
    background-color: #444;
    color: white;
    font-weight: bold;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>

<section id="header">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <a href="/">
    <img src="/Images/Logo.png" alt="Logo" class="logo">
  </a>
  <div>
    <ul id="navbar">
      <li><a class="active" href="/">Home</a></li>
      <li><a href="/store">Shop</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>

      <% if (isAuth) { %>
        <li class="no-hover">
          <a href="/logout">
            <div class="user-avatar" title="<%= username %>">
              <%= username.charAt(0).toUpperCase() %>
            </div>
          </a>
        </li>
      <% } else { %>
        <li class="no-hover">
          <button onclick="window.location.href='/login'"><span>Login</span></button>
        </li>
      <% } %>
    </ul>
  </div>
</section>

<section id="header">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <a href="/">
    <img src="/Images/Logo.png" alt="Logo" class="logo" />
  </a>

  <div class="hamburger" id="hamburger">
    <i class="fas fa-bars"></i>
  </div>

  <nav id="navbar-desktop">
    <ul id="navbar">
      <li class="nav-item"><a class="active" href="/">Home</a></li>
      <li class="nav-item"><a href="/store">Shop</a></li>
      <li class="nav-item"><a href="/about">About</a></li>
      <li class="nav-item"><a href="/contact">Contact</a></li>
      <li class="nav-item"><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>

      <% if (isAuth) { %>
        <li class="nav-item no-hover">
          <div class="user-menu">
            <div class="user-avatar" title="<%= username %>">
              <%= username.charAt(0).toUpperCase() %>
            </div>
            <button class="logout-btn" onclick="window.location.href='/logout'">
              <span>Logout</span>
            </button>
          </div>
        </li>
      <% } else { %>
        <li class="nav-item no-hover">
          <button onclick="window.location.href='/login'"><span>Login</span></button>
        </li>
      <% } %>
    </ul>
  </nav>

  <nav id="navbar-mobile">
    <ul>
      <li class="nav-item"><a class="active" href="/">Home</a></li>
      <li class="nav-item"><a href="/store">Shop</a></li>
      <li class="nav-item"><a href="/about">About</a></li>
      <li class="nav-item"><a href="/contact">Contact</a></li>
      <li class="nav-item"><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>

      <% if (isAuth) { %>
        <li class="nav-item no-hover">
          <div class="user-menu">
            <div class="user-avatar" title="<%= username %>">
              <%= username.charAt(0).toUpperCase() %>
            </div>
            <button class="logout-btn" onclick="window.location.href='/logout'">
              <span>Logout</span>
            </button>
          </div>
        </li>
      <% } else { %>
        <li class="nav-item no-hover">
          <button onclick="window.location.href='/login'"><span>Login</span></button>
        </li>
      <% } %>
    </ul>
  </nav>
</section>

<style>
  #header {
    background-color: #212121;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);
    position: sticky;
    top: 0;
    left: 0;
    z-index: 999;
    height: 60px;
    padding: 0 20px;
  }

  .logo {
    padding: 1px 15px;
    height: 45px;
  }

  /* Original navbar styles for desktop */
  #navbar {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 60px;
    gap: 15px;
  }

  #navbar .nav-item {
    min-width: 100px;
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    z-index: 1;
    transition: color 0.2s ease, transform 0.3s ease;
  }

  #navbar .nav-item:not(.no-hover)::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background-color: white;
    z-index: 0;
    transition: width 0.2s ease;
  }

  #navbar .nav-item:not(.no-hover):hover::before {
    width: 100%;
  }

  #navbar .nav-item:not(.no-hover):hover a {
    color: #1e1e1e;
  }

  #navbar .nav-item a {
    text-decoration: none;
    color: white;
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  #navbar .nav-item:last-child {
    margin-right: 15px;
  }

  #navbar .nav-item.no-hover button {
    width: 100%;
    height: 70%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #navbar button {
    position: relative;
    background-color: transparent;
    color: white;
    font-size: 18px;
    border-radius: 5px;
    border: 2px solid white;
    padding: 8px 20px;
    cursor: pointer;
    overflow: hidden;
    z-index: 1;
    transition: color 0.2s ease, transform 0.3s ease;
    text-decoration: none;
  }

  #navbar button::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background-color: white;
    z-index: 0;
    transition: width 0.2s ease;
  }

  #navbar button:hover::before {
    width: 100%;
  }

  #navbar button:hover {
    color: #1e1e1e;
  }

  #navbar button span {
    position: relative;
    z-index: 2;
  }

  .user-menu {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 0 15px;
  }

  .user-avatar {
    background-color: #444;
    color: white;
    font-weight: bold;
    width: 70px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    cursor: default;
    user-select: none;
    font-size: 20px;
    margin-right: 10px;
  }

  .logout-btn {
    position: relative;
    background-color: transparent;
    border: 2px solid white;
    border-radius: 5px;
    color: white;
    font-size: 16px;
    cursor: pointer;
    padding: 6px 18px;
    overflow: hidden;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
  }

  .logout-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background-color: white;
    z-index: 0;
    transition: width 0.2s ease;
  }

  .logout-btn:hover::before {
    width: 100%;
  }

  .logout-btn:hover {
    color: #1e1e1e;
  }

  .logout-btn span {
    position: relative;
    z-index: 2;
  }

  /* Hamburger Icon */
  .hamburger {
    display: none;
    font-size: 24px;
    color: white;
    cursor: pointer;
    margin-left: auto;
  }

  #navbar-mobile,
  .hamburger {
    display: none;
  }

  #navbar-desktop {
    display: block;
  }

  @media (max-width: 768px) {
    #navbar-desktop {
      display: none !important;
    }

    .hamburger {
      display: block;
    }

    #navbar-mobile {
      display: none;
      flex-direction: column;
      align-items: flex-start;
      position: absolute;
      top: 60px;
      left: 0;
      background-color: #212121;
      width: 100%;
      padding: 10px 20px;
      gap: 10px;
      z-index: 998;
    }

    #navbar-mobile.show {
      display: flex !important;
    }

    #navbar-mobile .nav-item {
      width: 100%;
      justify-content: flex-start;
    }

    #navbar-mobile .user-menu {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }

    #navbar-mobile .logout-btn,
    #navbar-mobile button {
      width: 100%;
      padding: 8px 10px;
    }

    #navbar-mobile .user-avatar {
      margin-right: 0;
    }

    #navbar-mobile .user-avatar {
      display: none !important;
    }

    #navbar-mobile a {
      text-decoration: none !important;
      color: white !important;
    }

    #navbar-mobile a:hover {
      color: #ddd !important;
    }

    #navbar-mobile ul {
      list-style: none;
      padding-left: 0;
      margin: 0;
    }

    #navbar-mobile li {
      margin-bottom: 12px;
    }

    #navbar-mobile li:last-child {
      margin-bottom: 0;
    }
  }
</style>

<script>
  const hamburger = document.getElementById('hamburger');
  const mobileNavbar = document.getElementById('navbar-mobile');

  hamburger.addEventListener('click', () => {
    mobileNavbar.classList.toggle('show');
  });
</script>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Checkout</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Lavishly+Yours&family=Space+Grotesk:wght@300..700&display=swap');
  </style>
</head>

<body>
  <%- include('partials/_navbar') %>

    <h1 id="checkout-title">Checkout</h1>

    <div class="checkout-summary">
      <table id="checkout-table">
        <thead>
          <tr>
            <th class="col-item">Item</th>
            <th class="col-price">Price</th>
            <th class="col-quantity">Quantity</th>
            <th class="col-total">Total</th>
          </tr>
        </thead>
        <tbody>
          <% cart.forEach(item=> { %>
            <tr>
              <td>
                <%= item.name %>
              </td>
              <td class="col-price">$<%= (item.price ? item.price.toFixed(2) : '0.00' ) %>
              </td>
              <td class="col-quantity">
                <%= item.quantity %>
              </td>
              <td class="col-total">$<%= (item.total ? item.total.toFixed(2) : '0.00' ) %>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>

      <div class="checkout-total">
        <strong>Total:</strong> $<%= (grandTotal ? grandTotal.toFixed(2) : '0.00' ) %>
      </div>
    </div>

    <form action="/place-order" method="POST" class="checkout-form">
      <label for="fullName">Full Name *</label>
      <input type="text" id="fullName" name="fullName" required placeholder="Full name" />

      <label for="email">Email Address *</label>
      <input type="email" id="email" name="email" required placeholder="gamerguy@example.com" />

      <label for="streetAddress">Street Address *</label>
      <input type="text" id="streetAddress" name="streetAddress" required placeholder="1234 Main St" />

      <label for="city">City *</label>
      <input type="text" id="city" name="city" required placeholder="Your city" />

      <label for="postalCode">Postal Code *</label>
      <input type="text" id="postalCode" name="postalCode" required placeholder="e.g., 00404" />

      <label for="phone">Phone Number *</label>
      <input type="tel" id="phone" name="phone" required placeholder="+0712 345 678" />

      <label class="checkbox-label" for="cod">
        <input type="checkbox" id="cod" name="paymentMethod" value="cod" required />
        Cash on Delivery *
      </label>

      <button type="submit" class="proceed-btn"><span>Place Order</span></button>
    </form>
    <%- include('partials/_footer') %>
</body>

</html>
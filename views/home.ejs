<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PS Curves</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Lavishly+Yours&family=Space+Grotesk:wght@300..700&display=swap');
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    .user-avatar {
      background-color: #333;
      color: white;
      width: 35px;
      height: 35px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      cursor: pointer;
    }

    .add-to-cart-btn {
      width: 9.5rem;
      height: 2.5rem;
      text-align: center;
      white-space: nowrap;
      cursor: pointer;
      font-size: 1rem;
      color: #000;
      background-color: #eee;
      border: 1px solid #ccc;
      border-radius: 4px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      user-select: none;
      transition: background-color 0.2s ease, color 0.2s ease;
    }

    .add-to-cart-btn:hover:not(:disabled) {
      color: #343A3C;
      background-color: #ddd;
    }

    .add-to-cart-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .add-to-cart-btn span {
      display: inline-block;
      font-weight: normal;
      font-size: inherit;
      color: inherit;
      line-height: 1;
    }

    .add-to-cart-btn span.tick {
      font-weight: normal;
    }

    /* Responsive Media Queries */
@media (max-width: 768px) {
  #hero {
    flex-direction: column;
    text-align: center;
    padding: 1rem;
  }

  #hero-left h1 {
    font-size: 2rem;
  }

  #hero-left h3 {
    font-size: 1rem;
  }

  #img-playstation {
    max-width: 100%;
    height: auto;
    margin-top: 1rem;
  }

  .pro-container {
    flex-direction: column;
    align-items: center;
  }

  .pro {
    max-width: 90%;
    width: 100%;
  }

  .add-to-cart-btn {
    width: 100%;
    font-size: 0.95rem;
    padding: 0.6rem;
  }

  .discount-badge {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
  }
}

  </style>
</head>

<body>
  <%- include('partials/_navbar') %>

    <section id="hero">

      <!--<form action="/add-product" method="GET">
        <button type="submit">Add Product</button>
      </form>-->

      <div id="hero-left">
        <h1>The Next Chapter of Your Game Collection Starts Here.</h1>
        <h3>Explore a curated collection of used PlayStation discs from recent hits to timeless classics.</h3>
        <button onclick="window.location.href='/store'"><span>Shop Now</span></button>
      </div>
      <img id="img-playstation" src="/Images/Playstations BW.png" alt="Playstations" loading="lazy">
    </section>

    <section id="hot-products">
      <h2>Recently Released</h2>
      <div class="pro-container">
        <% if (recentProducts.length> 0) { %>
          <% recentProducts.forEach(product=> { %>
            <div class="pro">
              <% if (product.oldprice) { %>
                <span class="discount-badge">
                  -<%= Math.round(((product.oldprice - product.newprice) / product.oldprice) * 100) %>%
                </span>
                <% } %>
                  <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                  <div class="pro-des">
                    <h3>
                      <%= product.name %>
                    </h3>
                    <p>
                      <% if (product.oldprice) { %>
                        <span class="old-price">$<%= product.oldprice %></span><br>
                        <% } %>
                          <span class="new-price">$<%= product.newprice %></span>
                    </p>
                    <div class="cart-action">
                      <button class="add-to-cart-btn" data-product-id="<%= product._id %>">
                        <span>Add to Cart</span>
                      </button>
                    </div>
                  </div>
            </div>
            <% }) %>
              <% } else { %>
                <p>No recent products found.</p>
                <% } %>
      </div>
    </section>
    <%- include('partials/_footer') %>

      <script>
        document.addEventListener("DOMContentLoaded", () => {
          const buttons = document.querySelectorAll(".add-to-cart-btn");

          buttons.forEach((button) => {
            const buttonText = button.querySelector("span");

            button.addEventListener("click", async () => {
              const productId = button.getAttribute("data-product-id");

              button.disabled = true;

              try {
                const response = await fetch(`/cart/add/${productId}`, {
                  method: "POST",
                  headers: {
                    "Content-Type": "application/json",
                    Accept: "application/json",
                  },
                });

                if (response.ok) {
                  buttonText.textContent = "âœ“";
                  buttonText.classList.add("tick");

                  setTimeout(() => {
                    buttonText.classList.remove("tick");
                    buttonText.textContent = "Add to Cart";
                    button.disabled = false;
                  }, 500);
                } else {
                  const error = await response.text();
                  alert("Error: " + error);
                  button.disabled = false;
                }
              } catch (error) {
                console.error("Fetch error:", error);
                alert("Failed to add to cart.");
                button.disabled = false;
              }
            });
          });
        });
      </script>

</body>

</html>
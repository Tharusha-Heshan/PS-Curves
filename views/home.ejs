<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PS Curves</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>@import url('https://fonts.googleapis.com/css2?family=Lavishly+Yours&family=Space+Grotesk:wght@300..700&display=swap');</style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    .user-avatar {
      background-color: #333;
      color: white;
      width: 35px;
      height: 35px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <section id="header">
    <a href="/">
      <img src="/Images/Logo.png" alt="Logo" class="logo">
    </a>
    <div>
      <ul id="navbar">
        <li><a class="active" href="/">Home</a></li>
        <li><a href="/store">Shop</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a></li>

        <p style="color: white; background: #222; padding: 10px; max-width: 1100px; margin: 10px auto; font-family: monospace;">
          isAuth = <%= JSON.stringify(isAuth) %> | username = <%= JSON.stringify(username) %>
        </p>

        <% if (isAuth) { %>
          <li class="no-hover">
            <a href="/logout">
              <div class="user-avatar" title="<%= username %>">
                <%= username.charAt(0).toUpperCase() %>
              </div>
            </a>
          </li>
        <% } else { %>
          <li class="no-hover">
            <button onclick="window.location.href='/login'"><span>Login</span></button>
          </li>
        <% } %>
      </ul>
    </div>
  </section>

  <section id="hero">
    <div id="hero-left">
      <h1>The Next Chapter of Your Game Collection Starts Here.</h1>
      <h3>Explore a curated collection of used PlayStation discs from recent hits to timeless classics.</h3>
      <button onclick="window.location.href='/store'"><span>Shop Now</span></button>
    </div>    
    <img id="img-playstation" src="/Images/Playstations BW.png" alt="Playstations" loading="lazy">
  </section>

  <section id="hot-products">
    <h2>Most Recent</h2>
    <div class="pro-container">
      <% if (recentProducts.length > 0) { %>
        <% recentProducts.forEach(product => { %>
          <div class="pro">
            <% if (product.oldprice) { %>
              <span class="discount-badge">
                -<%= Math.round(((product.oldprice - product.newprice) / product.oldprice) * 100) %>%
              </span>
            <% } %>
            <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
            <div class="pro-des">
              <h3><%= product.name %></h3>
              <p>
                <% if (product.oldprice) { %>
                  <span class="old-price">$<%= product.oldprice %></span><br>
                <% } %>
                <span class="new-price">$<%= product.newprice %></span>
              </p>
              <form action="/cart/add/<%= product._id %>" method="POST">
                <button type="submit"><span>Add to Cart</span></button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No recent products found.</p>
      <% } %>
    </div>
  </section>
  
  
    

  <div style="text-align: center; margin-bottom: 20px;">
    <button onclick="window.location.href='/add-product'"><span>Add New Product</span></button>
  </div>
</body>
</html>